<%- include('includes/head.ejs', { title: 'Home' }) %>
<link rel="stylesheet" href="/styles/post.css">
</head>
<body>
  <%- include('includes/header.ejs') %>
  <main id="hero-section" class="all-posts">
    
  </main>
  <section id="all-posts">
    <h2 class="heading">All Posts</h2>
    
    <% if (!posts || posts.length === 0) { %>
      <h2>No posts yet - Start posting!</h2>
      <form action="/posts/new" method="GET">
      <button class="btn">New Post</button>
      </form> 
      <% }  else { %>
        <div class="post-flex">
        <% for(const post of posts) { %>
          <%- include('includes/post-item.ejs', {post: post}) %>
          <% } %>
        </div>
        <% } %>
  </section>
  <%- include('includes/footer.ejs') %>
</body>

</html>